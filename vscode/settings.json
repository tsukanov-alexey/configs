{
    "terminal.integrated.defaultProfile.windows": "PowerShell 7",
    "terminal.integrated.profiles.windows": {
        "PowerShell 7": {
            "path": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
            "icon": "terminal-powershell"
        },        
    },

    "editor.linkedEditing": true,

    // Appearance -----------------------------------------

    "window.commandCenter": false,
    "window.autoDetectColorScheme": true,
    
    "workbench.iconTheme": "catppuccin-perfect-dark",
    "workbench.preferredLightColorTheme": "Default Light Modern",
    "workbench.preferredDarkColorTheme": "Eva Dark",

    "editor.fontFamily": "'Maple Mono', Consolas, 'Courier New', monospace",
    "editor.fontSize": 13,
    "editor.fontLigatures": true,
    "editor.minimap.enabled": false,
    
    "terminal.integrated.fontFamily": "Agave Nerd Font Mono",
    "terminal.integrated.fontSize": 14,


    
    // Tooling --------------------------------------------

    // -- Custom Language Properties ----------------------

    "custom-language-properties": {
        "php.comments.lineComment": "#"
    },


    // -- GitLens -----------------------------------------

    "gitlens.graph.layout": "editor",


    // -- CodeSnap ----------------------------------------

    "codesnap.showLineNumbers": true,
    "codesnap.realLineNumbers": false,
    "codesnap.showWindowControls": false,
    "codesnap.showWindowTitle": false,
    "codesnap.containerPadding": "1em",
    "codesnap.roundedCorners": true,
    "codesnap.transparentBackground": false,
    "codesnap.backgroundColor": "#a78cfa", // default
    // "codesnap.backgroundColor": "#e06c75", // bad
    // "codesnap.backgroundColor": "#e4bf7f", // ok
    // "codesnap.backgroundColor": "#98c379", // good



    // Programming Languages ------------------------------

    // -- Markdown ----------------------------------------

    "[markdown]": {
        "editor.unicodeHighlight.ambiguousCharacters": false,
        "editor.unicodeHighlight.invisibleCharacters": false,
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 80,
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },


    // -- JSON --------------------------------------------

    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },


    // -- HTML --------------------------------------------

    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features",
        "editor.tabSize": 4,
        "editor.fontLigatures": false,
    },
    "[django-html]": {
        "editor.tabSize": 4,
    },

    "emmet.includeLanguages": {
        "django-html": "html",
    },
    "emmet.syntaxProfiles": {
        "html": {
            "inline_break": 1,
        },
    },
    "html.format.wrapLineLength": 0,


    // -- CSS ---------------------------------------------

    


    // -- JavaScript --------------------------------------



    // -- PHP ---------------------------------------------
    
    "php.validate.run": "onType",
    "php.suggest.basic": false,

    
    // ---- Laravel ---------------------------------------


    // ---- Blade -----------------------------------------

    "[blade]": {
        "editor.defaultFormatter": "shufo.vscode-blade-formatter",
    },
    "bladeFormatter.format.enabled": true,
    "bladeFormatter.format.wrapLineLength": 1000000,
    "bladeFormatter.format.wrapAttributes": "auto",
    "bladeFormatter.format.sortHtmlAttributes": "none",
    "bladeFormatter.format.wrapAttributesMinAttrs": 10000,
    "bladeFormatter.format.sortTailwindcssClasses": false,



